# Defines the procedures a manpage rules file has to support for good
# manpages. The procedures here return errors.

################################################################

proc init_hook {} {return 1}

# Define/retrieve number of current pass.
proc _pass {{n {}}} {
    variable _pass
    if {$n != {}} {
	set _pass $n
    }
    return $_pass
}


proc manpage_begin {title section version} {
    cpush mp
    cset m [list manpage mem/mp/$title $title mp.$title.html]
    return
}

proc manpage_end {} {
    set res [cget m]
    cpop mp
    set res
}

