# -------------------------------------------------------------------------

source [file join \
	[file dirname [file dirname [file join [pwd] [info script]]]] \
	devtools testutilities.tcl]

testsNeedTcl     8.4
testsNeedTcltest 1.0

support {
    use      snit/snit.tcl   snit ; # 1.1 always, even when Tcl 8.5 runs the testsuite.
    use      struct/sets.tcl struct::set
    use      struct/list.tcl struct::list

    useLocal fa.tcl   grammar::fa
    useLocal faop.tcl grammar::fa::op

    useLocalFile tests.support
}
testing {
    useLocal dacceptor.tcl grammar::fa::dacceptor
}

# -------------------------------------------------------------------------

set class ::grammar::fa::dacceptor

# -------------------------------------------------------------------------

foreach f [lsort [glob -nocomplain -dir [file join [file dirname [info script]] tests] da_*.test]] {
    #puts   \ \ \ \ [file tail $f]\ \t[expr {double([lindex [time {source $f} 1] 0])/1000000}]\ seconds
    source $f
}

# -------------------------------------------------------------------------
::tcltest::cleanupTests
